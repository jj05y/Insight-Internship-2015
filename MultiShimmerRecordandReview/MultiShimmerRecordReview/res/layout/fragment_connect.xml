<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.shimmerresearch.MultiShimmerRecordReview.Fragments.ConnectFragment"
    android:gravity="center">

    <!--Left Column-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Thigh"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_lt_code" />

            <ImageView
                android:id="@+id/image_lt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_redcircle" />

            <Button
                android:id="@+id/button_lt_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect New" />

            <Button
                android:id="@+id/button_lt_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Calf"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_lc_code" />

            <ImageView
                android:id="@+id/image_lc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_redcircle" />

            <Button
                android:id="@+id/button_lc_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect New" />

            <Button
                android:id="@+id/button_lc_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />

        </LinearLayout>

    </LinearLayout>

    <!-- Middle Column-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lower Back"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_lb_code" />

            <ImageView
                android:id="@+id/image_lb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_redcircle" />

            <Button
                android:id="@+id/button_lb_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect New" />

            <Button
                android:id="@+id/button_lb_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:id="@+id/button_connect_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect All" />

            <Button
                android:id="@+id/button_disconnect_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnect All" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget All"
                android:id="@+id/button_forget" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Thigh"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_rt_code" />

            <ImageView
                android:id="@+id/image_rt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_redcircle" />

            <Button
                android:id="@+id/button_rt_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect New" />

            <Button
                android:id="@+id/button_rt_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Calf"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_rc_code" />

            <ImageView
                android:id="@+id/image_rc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_redcircle" />

            <Button
                android:id="@+id/button_rc_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect New" />

            <Button
                android:id="@+id/button_rc_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>