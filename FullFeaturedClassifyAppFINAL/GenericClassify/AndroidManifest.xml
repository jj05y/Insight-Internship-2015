<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmw"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="18" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo"
        >

        <activity
            android:name="classify.Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"
            >
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="classify.Activities.ConfirmDeleteDialog"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
        <activity
            android:name="classify.Activities.SaveDialog"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
        <activity android:name="classify.Activities.DeviceListActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>

    </application>

</manifest>